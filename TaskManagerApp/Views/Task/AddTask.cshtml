@model TaskManagerApp.Models.TaskModel
@{
    ViewData["Title"] = "Add Task";
}

<div class="container mt-5">
    <div class="card shadow-sm border-0 rounded-3">
        <div class="card-body p-4">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h2 class="fw-bold text-dark">Add New Task</h2>
                <a href="/Task/TaskDashboard" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back
                </a>
            </div>

            <form asp-action="AddTask" method="post">
                <div class="mb-3">
                    <label asp-for="Title" class="form-label fw-bold">Title</label>
                    <input asp-for="Title" class="form-control form-control-lg" placeholder="Enter task title" />
                    <span asp-validation-for="Title" class="text-danger"></span>
                </div>

                <div class="mb-4">
                    <label asp-for="Description" class="form-label fw-bold">Description</label>
                    <textarea asp-for="Description" class="form-control" rows="4" placeholder="Enter task description"></textarea>
                    <span asp-validation-for="Description" class="text-danger"></span>
                </div>

                <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                    <button type="submit" class="btn btn-success px-4 py-2">
                        <i class="bi bi-check-circle-fill me-2"></i>Save Task
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>
