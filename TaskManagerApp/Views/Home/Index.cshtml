@{
    ViewData["Title"] = "Home Page";
}
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

<!-- Main Homepage Section -->
<div class="container mt-5">
    <!-- Header -->
    <div class="text-center">
        <h1 class="display-4 text-primary">Welcome to Task Manager App</h1>
        <p class="lead">Plan smart. Work better. Stay organized.</p>
    </div>

    <!-- Features Section -->
    <div class="row mt-5">
        <div class="col-md-4 text-center">
            <i class="bi bi-check2-square display-3 text-success"></i>
            <h4 class="mt-3">Create Tasks</h4>
            <p>Easily create and manage your daily tasks in one place.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-pencil-square display-3 text-warning"></i>
            <h4 class="mt-3">Edit & Update</h4>
            <p>Make changes to your tasks anytime, anywhere.</p>
        </div>
        <div class="col-md-4 text-center">
            <i class="bi bi-trash display-3 text-danger"></i>
            <h4 class="mt-3">Delete Tasks</h4>
            <p>Remove completed or unnecessary tasks with a click.</p>
        </div>
    </div>

    <!-- CTA Button -->
    <div class="text-center mt-5">
        <a href="/Home/HomePage" class="btn btn-success btn-lg">Get Started</a>
    </div>
</div>

