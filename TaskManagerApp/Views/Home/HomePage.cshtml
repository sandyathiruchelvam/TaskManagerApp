@{
    ViewData["Title"] = "Preference page";
}
<div class="container d-flex align-items-center justify-content-center" style="height: 80vh;">
    <div class="text-center p-4 bg-white rounded-3 card shadow-lg" style="max-width: 600px;">
        <!-- Welcome Message -->
        <div class="mb-4">
            <h1 class="display-5 fw-bold text-primary mb-3">Welcome to Task Manager App</h1>
            <p class="fs-5 text-secondary">New here? Create an account. Already registered? Log in to manage your tasks.</p>
        </div>

        <!-- Buttons -->
        <div class="d-flex justify-content-center gap-3 mt-4">
            <a href="/Account/SignUp" class="btn btn-outline-primary btn-md px-4 rounded-3">
                Sign Up
            </a>
            <a href="/Account/Login" class="btn btn-primary btn-md px-4 rounded-3">
                Login
            </a>
        </div>
    </div>
</div>